<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:background="#DBEEFF">

    <!-- Nombre del Proyecto -->
    <TextView
        android:id="@+id/tvNombreProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Proyecto"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/background_blue_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp" />

    <!-- Descripción del Proyecto -->
    <TextView
        android:id="@+id/tvDescripcionProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del Proyecto"
        android:textColor="#666"
        android:textSize="14sp" />

    <!-- Fechas de inicio y fin -->
    <TextView
        android:id="@+id/tvFechasProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicio: 01/04/2024 - Fin estimado: 30/06/2024"
        android:textColor="#000"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <!-- Lista de Tareas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tareas"
        android:textColor="#000"
        android:textSize="14sp"
        android:paddingTop="2dp"
        />
    <TextView
        android:id="@+id/tvTareasProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Tarea 1: Diseño de la base de datos (Completado)\n- Tarea 2: Desarrollo del frontend (En progreso)\n- Tarea 3: Desarrollo del backend (Pendiente)"
        android:textColor="#000"
        android:textSize="14sp"
        android:paddingHorizontal="6dp"/>

    <TextView
        android:id="@+id/tvTareasProyectoAdicionales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

</LinearLayout>
